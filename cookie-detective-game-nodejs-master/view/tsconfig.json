{
  "compilerOptions": {
    "sourceMap": true,
    "strict": false,
    "module": "esnext",
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "target": "es2017",
    "allowJs": true,
    "baseUrl": "./src",
    "strictPropertyInitialization": false,
    "outDir": "./dist",
    "lib": [
      "DOM",
      "ES7",
      "DOM.Iterable",
      "ScriptHost"
    ],
    "paths": {
      "google-webgl/*": [
        "lib/webgl/lib/*"
      ]
    }
  },
  "include": [
    "./src/**/*",
    "./src/lib/**/*"
  ]
}
